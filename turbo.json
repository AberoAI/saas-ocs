{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env*", "**/prisma/schema.prisma"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "app/*.png", "app/*.ico"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "apps/**/.env*",
        "packages/**/.env*",
        "apps/frontend/messages/**",
        "apps/**/messages/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    }
  }
}
