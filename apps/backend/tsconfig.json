{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",

    // hasilkan .js & .d.ts
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,

    // ESM Node style (sesuai import .js di source)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // kualitas hidup
    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "composite": true
  },
  "include": ["src"],
  "exclude": [
    "src/app/**",
    "src/pages/**",
    "src/middleware/**",
    "node_modules",
    "dist",
    "tests/**"
  ],
  "references": [{ "path": "../../packages/shared" }]
}
