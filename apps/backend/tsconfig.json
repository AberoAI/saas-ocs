{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",

    // App backend: jangan emit .d.ts (biar gak tarik tipe internal tRPC)
    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,

    // ESM Node style
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // QoL
    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"

    // NOTE: tidak ada "composite": true
  },
  "include": ["src"],
  "exclude": [
    "src/app/**",
    "src/pages/**",
    "src/middleware/**",
    "node_modules",
    "dist",
    "tests/**"
  ]
  // NOTE: tidak ada "references"
}
