{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "plugins": [{ "name": "next" }],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["../../packages/shared/src/*"],
      "@repo/backend": ["../../apps/backend/dist/index.d.ts"]
    },

    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts",
    "../../packages/shared/src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "references": []
}
