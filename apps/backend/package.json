{
  "name": "@repo/backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "src/index.ts",
  "files": ["dist/**/*", "src/**/*"],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx src/server/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/main.js",
    "postinstall": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "ws": "tsx src/ws/server.ts",
    "test": "vitest run",
    "db:seed": "tsx src/scripts/seed-user.ts"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "6.14.0",
    "prisma": "6.14.0",
    "@trpc/server": "11.4.4",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "rate-limiter-flexible": "^7.2.0",
    "redis": "^5.8.1",
    "ws": "^8.18.3",
    "zod": "^4.0.14",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.10",
    "@types/ws": "^8.18.1",
    "@types/bcryptjs": "^2.4.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "vitest": "^1.6.0"
  }
}
