//apps/backend/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",

    "noEmit": false,
    "declaration": false,
    "emitDeclarationOnly": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",

    // memastikan tipe Node (process, Buffer, http, net, dll) tersedia saat build
    "types": ["node"],

    // beri tahu TS di mana folder @types berada (package ini & root workspace)
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],

    // supaya file server lama yang belum diketik tidak memblokir build
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": [
    "src/app/**",
    "src/pages/**",
    "src/middleware/**",
    "node_modules",
    "dist",
    "tests/**",
    "src/scripts/**",
    "src/queue-ping.ts"
  ]
}
